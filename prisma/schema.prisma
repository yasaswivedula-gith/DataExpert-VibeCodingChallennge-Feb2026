generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Task Status: todo, in_progress, completed
enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}

// Task Priority: low, medium, high
enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

// Workflow Status: active, paused
enum WorkflowStatus {
  ACTIVE
  PAUSED
}

// User model - synced with Supabase Auth
// Note: We use supabaseUserId to link with Supabase Auth
// Password is handled by Supabase - no local password storage
model User {
  id              String    @id @default(uuid())
  supabaseUserId  String    @unique  // Links to Supabase auth.users.id
  email           String    @unique
  name            String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  tasks           Task[]
  workflows       Workflow[]
  aiSuggestions   AISuggestion[]
}

// Task model - core productivity unit
model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([status])
  @@index([priority])
}

// Workflow model - automation sequences
model Workflow {
  id          String        @id @default(uuid())
  name        String
  description String?
  trigger     String
  status      WorkflowStatus @default(ACTIVE)
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
  @@index([status])
}

// AI Suggestion model - stores AI-generated recommendations
model AISuggestion {
  id        String   @id @default(uuid())
  title     String
  impact    String
  savings   String
  applied   Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([applied])
}
